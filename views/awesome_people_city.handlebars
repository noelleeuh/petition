<h3>These are all the awesome people who've signed the best petition ever in {{city}}</h3>

<div class='magic'>
    {{#signers}}
        <div>
            {{#if website}}
                <a href='{{website}}' id="allSigners">{{firstname}} {{surname}}</a>
            {{else}}
                {{firstname}} {{surname}}
            {{/if}}
            {{#if age}}
                {{age}}
            {{/if}}
        </div>
    {{/signers}}
</div>

<div class='rainbow'>
    <a href='/signers'>
       <button>Go back</button>
    </a>  &ensp;
    <a href='/settings'>
       <button>Edit your profile</button>
    </a> &ensp;
    <a href='/logout'>
       <button>Log out</button>
    </a>
</div>
